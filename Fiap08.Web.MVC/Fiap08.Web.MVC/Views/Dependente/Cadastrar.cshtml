@model Fiap08.Web.MVC.ViewModels.DependenteViewModel
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Dependente</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(c => c.Dependente.Nome)
        @Html.TextBoxFor(c => c.Dependente.Nome, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Dependente.DataNascimento)
        @Html.TextBoxFor(c => c.Dependente.DataNascimento, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Dependente.Responsavel)
        @Html.DropDownListFor(c => c.Dependente.ResponsavelId,
            Model.Responsaveis, "Selecione",
            new { @class = "form-control" })
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}

