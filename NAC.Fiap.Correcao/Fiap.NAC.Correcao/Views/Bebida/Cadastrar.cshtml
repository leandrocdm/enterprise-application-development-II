@model Fiap.NAC.Correcao.Models.Bebida

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Bebida</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(b => b.Nome)
        @Html.TextBoxFor(b => b.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.DataValidade)
        @Html.TextBoxFor(b => b.DataValidade, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.Valor)
        @Html.TextBoxFor(b => b.Valor, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(b => b.Alcoolico)
        @Html.LabelFor(b => b.Alcoolico)
    </div>
    <input type="submit" value="Salvar" class="btn btn-primary" />
}

