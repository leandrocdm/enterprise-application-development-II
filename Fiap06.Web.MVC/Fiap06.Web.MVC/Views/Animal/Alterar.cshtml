@model Fiap06.Web.MVC.Models.Animal
@{
    ViewBag.Title = "Alterar";
}

<h2>Alterar</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(animal => animal.AnimalId)
    <div class="form-group">
        @Html.LabelFor(animal => animal.Nome)
        @Html.TextBoxFor(animal => animal.Nome, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(animal => animal.Raca)
        @Html.TextBoxFor(animal => animal.Raca, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(animal => animal.Peso)
        @Html.TextBoxFor(animal => animal.Peso, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(animal => animal.Castrado)
        @Html.CheckBoxFor(animal => animal.Castrado)
    </div>

    <input type="submit" value="Editar" class="btn btn-success" />
}
